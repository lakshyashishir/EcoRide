{
  "name": "ecoride-backend",
  "version": "1.0.0",
  "description": "Backend service for EcoRide - Sustainable Transit Rewards Platform with Hedera integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
